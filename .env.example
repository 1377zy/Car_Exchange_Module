# Application
NODE_ENV=production
PORT=5000
HOST=0.0.0.0
CORS_ORIGINS=https://carexchange.example.com

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=rootpassword
MONGO_DATABASE=car_exchange
MONGO_USER=appuser
MONGO_PASSWORD=apppassword
MONGODB_URI=mongodb://appuser:apppassword@mongodb:27017/car_exchange?authSource=admin
DB_REPLICA_SET_ENABLED=false
DB_REPLICA_SET_NAME=rs0

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redispassword

# JWT Authentication
JWT_SECRET=your_jwt_secret_at_least_32_chars_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@carexchange.example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SENDGRID_API_KEY=your_sendgrid_api_key

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# File Storage
STORAGE_PROVIDER=local
UPLOAD_DIR=uploads/
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_aws_access_key_id
S3_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Logging
LOG_LEVEL=info

# Security
CSRF_PROTECTION=true

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@carexchange.example.com

# Monitoring
SENTRY_ENABLED=false
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# API Keys for Third-Party Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VEHICLE_DATA_API_KEY=your_vehicle_data_api_key
